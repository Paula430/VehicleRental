

@model BikeRentalSystem.Models.Skates;
@{
    ViewData["Title"] = "Add New Skates";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mt-3 p-3 shadow rounded">
                <div class="text-center border-bottom">
                    <h2 class="text-info">Add New Skates</h2>
                </div>
                <div>
                    @Html.ValidationSummary()
                </div>
                <div class="mt-3 p-3">
                    <form action="/Skates/Add" method="post" enctype="multipart/form-data" autocomplete="off">
                    <div class="mb-3 row">
                        <label class="col-3 col-form-label text-info">Type</label>
                        <div class="col-9">
                            @Html.TextBoxFor(m=>m.Type, new{@class="form-control",placeholder="Enter Type"})
                        </div>
                    </div>
                     <div class="mb-3 row">
                        <label class="col-3 col-form-label text-info">Size</label>
                        <div class="col-9">
                             @Html.TextBoxFor(m=>m.Size, new{@class="form-control",placeholder="Enter Size"})
                        </div>
                    </div>
                     <div class="mb-3 row">
                        <label class="col-3 col-form-label text-info">Wheel</label>
                        <div class="col-9">
                            @Html.TextBoxFor(m=>m.Wheel, new{@class="form-control",placeholder="Enter Wheel"})
                        </div>
                    </div>
                     <div class="mb-3 row">
                        <label class="col-3 col-form-label text-info">Wheel Hardness</label>
                        <div class="col-9">
                            @*<input value="true"/>*@
                            @Html.TextBoxFor(m=>m.WheelHardness, new{@class="form-control",placeholder="Enter Wheel Hardness"})
                        </div>
                    </div>
                    @* <div class="mb-3 row">
                        <label class="col-3 col-form-label text-info">Bike Image</label>
                        <div class="col-9">
                            @Html.TextBoxFor(m=>m.VehicleImage, new{@class="form-control", type="file"})
                        </div>
                    </div>*@
                    <div class="mb-3">
                        <button class="btn-primary btn-sn box-shadow rounded p-2 btn-dark" type="reset">Clear</button>
                        <button class="btn-primary btn-sn box-shadow rounded p-2 btn-success" type="submit">Add</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


