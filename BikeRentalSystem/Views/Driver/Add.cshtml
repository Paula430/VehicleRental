@{
    ViewData["Title"] = "Add Driver";
}

<div class="container">
    <div class="row">
       <div class="col-6 offset-3">
            <div class="mt-3 p-2 shadow rounded">
            <div class="text-center border-bottom">
                <h2 class="text-info">Add Driver</h2>
            </div>
            <div>
                @Html.ValidationSummary()
            </div>
            <div class="mt-3 p-3">
                <form action="/Driver/Add" method="post" enctype="multipart/form-data" autocomplete="off">
                    <div class="mb-3 row">
                        <label class="col-3 col-form-label">Name</label>
                        <div class="col-9">
                            <input type="email" class="form-control" placeholder="Enter name"/>
                    </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-3 col-form-label">Address</label>
                        <div class="col-9">
                             <input type="text" id="address" class="form-control" placeholder="Enter address"/>
                        </div>
                    </div>
                     <div class="mb-3 row">
                        <label class="col-3 col-form-label">Mobile Number</label>
                        <div class="col-9">
                             <input type="text" id="mobilenumber" class="form-control" placeholder="Enter mobile number"/>
                        </div>
                    </div>
                     <div class="mb-3 row">
                        <label class="col-3 col-form-label">Email</label>
                        <div class="col-9">
                             <input type="email" id="email" class="form-control" placeholder="Enter Email"/>
                        </div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-sm p-2 btn-dark" type="reset">Clear</button>
                        <button class="btn btn-sm p-2 btn-success" type="submit">Add</button>
                    </div>
                </form>
            </div>
        </div>
       </div>
    </div>
</div>