@model BikeRentalSystem.Models.Scooter;
@{
    ViewData["Title"] = "Add New Scooter";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mt-3 p-3 shadow rounded">
                <div class="text-center border-bottom">
                    <h2 class="text-info">Add New Bike</h2>
                </div>
                <div>
                    @Html.ValidationSummary()
                </div>
                <div class="mt-3 p-3">
                    <form action="/Scooter/Add" method="post" enctype="multipart/form-data" autocomplete="off">
                    <div class="mb-3 row">
                        <label class="col-3 col-form-label text-info">Type</label>
                        <div class="col-9">
                            @Html.TextBoxFor(m=>m.Type, new{@class="form-control",placeholder="Enter Type"})
                        </div>
                    </div>
                    @* <div class="mb-3 row">
                        <label class="col-3 col-form-label text-info">Size</label>
                        <div class="col-9">
                            <select name="Size" class="form-select">
                                <option value="">Select Size</option>
                                <option value="XS">XS</option>
                                <option value="S">S</option>
                                <option value="M">M</option>
                                <option value="L">L</option>
                                <option value="XL">XL</option>
                                <option value="XXL">XXL</option>
                            </select>
                        </div>
                    </div>*@
                     <div class="mb-3 row">
                        <label class="col-3 col-form-label text-info">Wheel</label>
                        <div class="col-9">
                            @Html.TextBoxFor(m=>m.Wheel, new{@class="form-control",placeholder="Enter Wheel"})
                        </div>
                    </div>
                     <div class="mb-3 row">
                        <label class="col-3 col-form-label text-info">Electric</label>
                        <div class="col-9">
                            @*<input value="true"/>*@
                            @Html.TextBoxFor(m=>m.Electric, new{@class="form-control",placeholder="Enter If Is Electric"})
                        </div>
                    </div>
                     <div class="mb-3 row">
                        <label class="col-3 col-form-label text-info">Hight</label>
                        <div class="col-9">
                            @Html.TextBoxFor(m=>m.Hight, new{@class="form-control",placeholder="Enter Hight"})
                        </div>
                    </div>
                    @* <div class="mb-3 row">
                        <label class="col-3 col-form-label text-info">Bike Image</label>
                        <div class="col-9">
                            @Html.TextBoxFor(m=>m.VehicleImage, new{@class="form-control", type="file"})
                        </div>
                    </div>*@
                    <div class="mb-3">
                        <button class="btn-primary btn-sn box-shadow rounded p-2 btn-dark" type="reset">Clear</button>
                        <button class="btn-primary btn-sn box-shadow rounded p-2 btn-success" type="submit">Add</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


